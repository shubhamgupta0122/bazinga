<h1>Listing Blog Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Average Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_posts.each do |blog_post| %>
      <tr>
        <td><%= blog_post.title %></td>
        <td><%= blog_post.description %></td>
        <td><%= blog_post.author %></td>
        <td><%= blog_post.avgrating %></td>
        <td><%= link_to 'View Blog', blog_post %></td>
        <!-- <td><%= link_to 'Edit Blog', edit_blog_post_path(blog_post) %></td>
        <td><%= link_to 'Delete Blog', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

